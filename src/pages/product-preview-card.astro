---
import BaseLayout from "../layouts/BaseLayout.astro";
---

<BaseLayout>
  <div class="flex-1 pt-4 px-2 bg-orange-100 md:grid md:place-items-center">
    <div class="rounded-xl overflow-hidden max-w-sm mx-auto bg-white md:grid md:grid-cols-2 md:max-w-2xl">
      <img class="md:hidden" src="../../public/product-preview-card/image-product-mobile.jpg" alt="">
      <img class="hidden md:block" src="../../public/product-preview-card/image-product-desktop.jpg" alt="">
      <div class="flex flex-col gap-4 p-6 text-gray-500 md:justify-around">
        <p class="text-sm">P E R F U M E</p>
        <h2 class="text-gray-900 font-bold text-4xl">Gabrielle Essence Eau De Parfum</h2>
        <p class="text-lg">A floral, solar, and voluptuous interpretation composed by Olivier Polge, Perfumer-Creator for the House of CHANEL.</p>
        <div class="flex gap-4 items-center">
          <p class="text-4xl font-bold text-green-800">$149.99</p>
          <p class="line-through text-sm">$169.99</p>
        </div>
        <button class="bg-green-800 text-white flex items-center justify-center gap-4 py-4 rounded-xl font-bold text-lg hover:bg-green-900">
          <img class="w-4" src="../../public/product-preview-card/icon-cart.svg" alt="">
          <span>Add to Cart</span>
        </button>
      </div>
    </div>
  </div>
</BaseLayout>
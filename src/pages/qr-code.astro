---
import BaseLayout from "../layouts/BaseLayout.astro";
---

<BaseLayout>
<div class="flex-1 grid place-items-center bg-blue-100 px-2">
  <div class="max-w-sm bg-white p-4 rounded-2xl">
    <img class="rounded-2xl" src="/qr-code/image-qr-code.png" alt="">
    <div class="p-6 text-center flex flex-col gap-4">
      <h2 class="text-slate-800 font-bold text-2xl">Improve your front-end skills by building projects</h2>
      <p class="text-slate-600">Scan the QR code to visit the Frontend Mentor and take your coding skills to the next level</p>
    </div>
  </div>
</div>
</BaseLayout>
---
import BaseLayout from "../layouts/BaseLayout.astro";
---

<BaseLayout>
  <div class="bg-indigo-100 flex-1 grid place-items-center">
    <div class="bg-slate-50 max-w-sm rounded-3xl overflow-hidden">
      <img src="/order-summary/illustration-hero.svg" alt="">

      <div class="flex flex-col gap-6 text-slate-500 p-8">
        <h2 class="text-slate-800 font-bold text-2xl text-center">Order Summary</h2>
        <p class="text-center text-lg leading-relaxed px-2">You can now listen to millions of songs, audiobooks, and podcasts on any device anywhere you like!</p>
        <div class="flex justify-between items-center bg-slate-100 px-4 py-6 rounded-3xl">
          <div class="flex gap-4">
            <img src="/order-summary/icon-music.svg" alt="">
            <div>
              <p class="font-bold text-slate-800">Annual Plan</p>
              <p>$59.99/year</p>
            </div>
          </div>
          <a class="text-indigo-600 font-bold underline hover:no-underline hover:opacity-70" href="">Change</a>
        </div>
        <button class="text-slate-50 bg-indigo-700 py-4 rounded-2xl shadow-xl shadow-indigo-300 font-bold text-lg hover:bg-opacity-70 hover:shadow-indigo-200">Proceed to Payment</button>
        <button class="font-bold hover:text-slate-800">Cancel Order</button>
      </div>
    </div>
  </div>
</BaseLayout>
---
import BaseLayout from '../layouts/BaseLayout.astro';
---

<BaseLayout>
	<div class="grid flex-1 place-items-center bg-slate-900">
		<div class="max-w-sm rounded-2xl bg-slate-800 p-8 text-lg text-slate-400">
			<div class="relative group">
				<a href="">
					<img class="rounded-xl" src="/nft-preview-card/image-equilibrium.jpg" alt="" />
					<div class="group-hover:grid hidden absolute w-full h-full bg-[#00FFF7] top-0 rounded-xl place-items-center bg-opacity-50">
						<img src="/nft-preview-card/icon-view.svg" alt="">
					</div>
				</a>
			</div>

			<h2 class="pb-4 pt-6 text-2xl font-bold text-slate-200">
				<a class="hover:text-[#00FFF7]" href="">Equilibrium #3429</a>
			</h2>

			<p class="pb-4 leading-loose">Our Equilibrium collection promotes balance and calm.</p>

			<div class="flex justify-between border-b border-slate-700 pb-6">
				<div class="flex items-center gap-2">
					<img class="aspect-square h-6 w-3" src="/nft-preview-card/icon-ethereum.svg" alt="" />
					<p class="text-[#00FFF7]">0.041 ETH</p>
				</div>

				<div class="flex items-center gap-2">
					<img class="h-6 w-6" src="/nft-preview-card/icon-clock.svg" alt="" />
					<p>3 days left</p>
				</div>
			</div>

			<div class="flex items-center gap-4 pt-6">
				<img
					class="w-10 rounded-full border border-slate-100"
					src="/nft-preview-card/image-avatar.png"
					alt=""
				/>
				<p>Creation of <a class="text-slate-200 hover:text-[#00FFF7]" href="">Jules Wyvern</a></p>
			</div>
		</div>
	</div>
</BaseLayout>
